<!DOCTYPE html>
<html lang="pt-BR">
<%- include('includes/head') %>

<body class="bg-dark d-flex flex-column vh-100">
  <%- include('includes/nav') %>

  <div class="container h-100">

    <div class="row mt-5 align-items-center">
      <div class="col">
        <h2 class="mb-0 fw-bold text-white"><%= note.title %></h2>
        <p class="text-white opacity-50 mt-1">
          Criado em <%= note.createdAt %>
        </p>
      </div>
      <div class="col-2">
        <button type="button" class="btn fw-semibold btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addModal">Editar</button>
        <a href="/notes/delete/<%=note._id%>" type="button" class="btn ms-1 fw-semibold btn-danger btn-sm">Deletar</a>
      </div>
    </div>

    <%- include('includes/message') %>

    <div class="row mt-2 flex-nowrap text-white w-100 fs-5 mt-5">
      <div class="col">

        <%- note.content %>
      </div>
    </div>

    <div class="row"></div>

  </div>

  <%- include('includes/attModal', {note: note}) %>

  <%- include('includes/footer') %>
  <%- include('includes/scripts') %>

  <script src="https://cdn.tiny.cloud/1/jp83p788r1ishihiyyvbmt4cxz76g7auvzv91pbgdynrx9zy/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

  <script>
    tinymce.init({
      selector: "#addcontent",
      plugins: "fullscreen lists advlist wordcount preview table",
      menubar: "edit view insert format preview",
      toolbar: 'undo redo | styles | bold italic | alignleft aligncenter alignright alignjustify | outdent indent | numlist bullist'
    });
  </script>

</body>

</html>