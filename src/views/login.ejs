<!DOCTYPE html>
<html lang="pt-BR">

<%- include('includes/head') %>

<body class="bg-dark d-flex flex-column vh-100">
  <!-- <%- include('includes/nav') %> -->

  <div class="container h-100">
    <div class="card rounded-lg bg-white mx-auto w-50 mt-5">
      <div class="card-header border-warning">
        <h5 class="card-title">Fa√ßa login com email e senha</h5>
      </div>
      <div class="card-body">
        <%- include('includes/message') %>
        <form action="/login-save" method="post">
          <div class="mb-3">
            <label class="form-label">Email da sua conta</label>
            <input name="email" type="email" class="form-control" placeholder="email@example.com">
            <div id="emailHelp" class="form-text text-danger"></div>
          </div>
          <div class="mb-3">
            <label class="form-label">Sua senha</label>
            <input name="password" type="password" class="form-control" placeholder="******">
          </div>
          <div class="d-flex align-items-center flex-row">
            <button type="submit" class="btn btn-primary me-3">Entrar</button>
            <a class="link text-decoration-none text-primary" href="/cadastro">Criar uma conta</a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include('includes/footer') %>

  <%- include('includes/scripts') %>
</body>

</html>